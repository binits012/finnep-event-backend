<mjml>
  <mj-head>
    <mj-font name="Inter" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" />
    <mj-title>{{t.subject}}</mj-title>
    <mj-attributes>
      <mj-all font-family="Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif" />
      <mj-text color="#374151" font-size="16px" line-height="1.6" />
      <mj-section background-color="#f3f4f6" />
    </mj-attributes>
    <mj-style>
      @media (max-width: 620px) {
        body, table, td, div {
          max-width: 100% !important;
          box-sizing: border-box !important;
        }
        .verification-code {
          font-size: 28px !important;
          letter-spacing: 4px !important;
          word-break: break-word !important;
        }
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f3f4f6">
    <mj-wrapper background-color="#ffffff" border-radius="8px">
      <!-- Header -->
      <mj-section background-color="#4F46E5" border-radius="8px 8px 0 0" padding="40px 40px 20px 40px">
        <mj-column>
          <mj-text align="center" color="#ffffff" font-size="28px" font-weight="700">
            {{t.title}}
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Body -->
      <mj-section padding="40px">
        <mj-column>
          <mj-text padding-bottom="20px">
            {{t.greeting}}
          </mj-text>
          <mj-text padding-bottom="30px">
            {{t.body}}
          </mj-text>

          <!-- Code Box -->
          <mj-section background-color="#667eea" border-radius="12px" padding="32px">
            <mj-column>
              <mj-text align="center" color="#ffffff" font-size="36px" font-weight="700" letter-spacing="8px" font-family="'Courier New', monospace" padding="0">
                <span class="verification-code">{{verificationCode}}</span>
              </mj-text>
            </mj-column>
          </mj-section>

          <mj-spacer height="30px" />

          <mj-text color="#6B7280" font-size="14px" padding-bottom="20px">
            <strong style="color: #374151;">{{t.important}}</strong> {{t.expiry}} <strong style="color: #4F46E5;">{{t.expiryMinutes}}</strong>. {{t.expiryNote}}
          </mj-text>

          <mj-text color="#6B7280" font-size="14px" padding-bottom="30px">
            {{t.securityNote}}
          </mj-text>

          <mj-divider border-color="#E5E7EB" border-width="1px" padding="30px 0" />

          <mj-text color="#9CA3AF" font-size="12px" line-height="1.5">
            {{t.footer}} <strong style="color: #4F46E5;">{{companyName}} {{t.footerPlatform}}</strong>. {{t.footerNoReply}}
          </mj-text>
        </mj-column>
      </mj-section>

      <!-- Footer -->
      <mj-section background-color="#F9FAFB" border-radius="0 0 8px 8px" padding="30px 40px">
        <mj-column>
          <mj-text align="center" color="#6B7280" font-size="12px" line-height="1.5" padding-bottom="10px">
            Â© {{currentYear}} {{companyName}}. {{t.copyright}}
          </mj-text>
          <mj-text align="center" color="#9CA3AF" font-size="11px" line-height="1.5">
            {{t.help}} <a href="mailto:{{contactEmail}}" style="color: #4F46E5; text-decoration: none;">{{contactEmail}}</a>
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>

